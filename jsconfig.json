{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "checkJs": true,
    "baseUrl": "./",
    "paths": {
      "Assets/*": ["src/assets*"],
      "Atoms/*": ["src/atoms/*"],
      "Components/*": ["src/components/*"],
      "Container/*": ["src/container/*"],
      "Context/*": ["src/context/*"],
      "Helper/*": ["src/helper/*"],
      "Modules/*": ["src/modules/*"],
      "Pages/*": ["src/pages/*"],
      "PublicAssets/*": ["public/assets*"],
      "Scss/*": ["src/scss/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
